<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:id="@+id/ab_ma_ml5_ll">

    <ImageView
        android:id="@+id/miwok_iv"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/ab_ma_tan_background"
        tools:src="@drawable/ab_ma_ml2_color_black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        tools:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/miwok_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/m_white"
            android:textStyle="bold"
            tools:text="Miwok" />

        <TextView
            android:id="@+id/english_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/m_white"
            tools:text="English" />

    </LinearLayout>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_play_arrow_white_36dp" />

</LinearLayout>