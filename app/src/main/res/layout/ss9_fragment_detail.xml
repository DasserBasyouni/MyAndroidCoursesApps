<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <TextView
            android:id="@+id/ss9_detail_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Tuesday"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/ss9_detail_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="June 14"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#646464"
            tools:targetApi="jelly_bean"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/ss9_detail_high_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="96sp"
                    android:fontFamily="sans-serif-light"
                    android:text="21"
                    android:textColor="@color/cardview_dark_background"
                    />

                <TextView
                    android:id="@+id/ss9_detail_low_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="96sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#646464"
                    android:text="8"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/ss9_detail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/m_ic_android"
                    />

                <TextView
                    android:id="@+id/ss9_detail_forecast_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#646464"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:text="Clear"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ss9_detail_humidity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-light"
            android:textSize="22sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Humidity: 84%"
            tools:targetApi="jelly_bean"
            />

        <TextView
            android:id="@+id/ss9_detail_wind_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-light"
            android:textSize="22sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Wind: 6 Km/H NM"
            tools:targetApi="jelly_bean"
            />

        <TextView
            android:id="@+id/ss9_detail_pressure_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="22sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Pressure: 1014 hpa"
            tools:targetApi="jelly_bean"
            />
    </LinearLayout>
</ScrollView>