<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unitedapps.com.googleandroidcourses.Courses.DevelopingAndroidApps.PopularMovies_V1.pm1_DetailsActivity"
    >

    <ImageView
        android:id="@+id/pm_thumbnail_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/androidparty"
        app:layout_constraintRight_toLeftOf="@+id/pm_title_tv"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/pm_plotSynopsis_tv"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="23dp"
        />

    <TextView
        android:id="@+id/pm_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="34dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pm_rekeaseDate_tv"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/pm_rekeaseDate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="12sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pm_title_tv"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/pm_userRate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rate"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pm_rekeaseDate_tv"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/pm_rekeaseDate_tv"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/pm_rekeaseDate_tv"
        />

    <TextView
        android:id="@+id/pm_plotSynopsis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overview"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="170dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        />
</android.support.constraint.ConstraintLayout>
