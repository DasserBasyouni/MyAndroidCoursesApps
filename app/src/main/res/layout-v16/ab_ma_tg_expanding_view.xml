<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ab_ma_tg_expanding_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ab_ma_tg_place_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ab_ma_tg_hotel_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ab_ma_tg_name_tv"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    tools:text="Sheraton Montazah"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ab_ma_tg_rate_or_stars_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"
                    tools:text="4.3 â˜…"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/ab_ma_tg_el"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ab_ma_tg_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="16dp"
                    tools:text="Overlooking the Mediterranean Sea, this refined business hotel is across the street from the beach and a 13-minute walk from Montaza Palace. "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ab_ma_tg_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:drawableLeft="@drawable/ic_location_on_blue_grey_300_24dp"
                    android:drawablePadding="18dp"
                    android:drawableStart="@drawable/ic_location_on_blue_grey_300_24dp"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="10dp"
                    android:paddingEnd="36dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:paddingStart="36dp"
                    tools:text="@string/ab_bdc_business_location"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>